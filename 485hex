#include <avr/pgmspace.h>
#include <SoftwareSerial.h>
SoftwareSerial Serial485_1(8, 9);
SoftwareSerial Serial485_2(10, 11);
const PROGMEM char forward[] =  {0x05, 0x10, 0x00, 0x00, 0x00, 0x01, 0x02, 0x00, 0x01, 0x55, 0x50};
const PROGMEM char backward[] = {0x05, 0x10, 0x00, 0x00, 0x00, 0x01, 0x02, 0x00, 0x02, 0x15, 0x51};
const PROGMEM char freq10[] =   {0x05, 0x10, 0x00, 0x01, 0x00, 0x01, 0x02, 0x03, 0xE8, 0x95, 0xFF};
const PROGMEM char freq15[] =   {0x05, 0x10, 0x00, 0x01, 0x00, 0x01, 0x02, 0x05, 0xDC, 0x97, 0x88};
const PROGMEM char stay[] =     {0x05, 0x10, 0x00, 0x00, 0x00, 0x01, 0x02, 0x00, 0x00, 0x94, 0x90};

int k;
char b;
char output;
String i;

void setup() {
  pinMode(7, OUTPUT);
  pinMode(12, OUTPUT);
  pinMode(13, OUTPUT);
  digitalWrite(7, LOW);
  digitalWrite(12, LOW);
  digitalWrite(13, LOW);
  Serial.begin(9600);
  Serial485_1.begin(9600);
  Serial485_2.begin(9600);
}

void loop() {
 
  while (Serial.available()) {
//    i += Serial.read();
    b = Serial.read();
    i += b;

    switch (i.charAt(0)) {
      case 0x05:
//        Serial.println("05");
        if (i.length() == 2) { 
        switch (i.charAt(1)) {
          case 0x10:
//            Serial.println("10");
            digitalWrite(7, HIGH);
            digitalWrite(13, HIGH);
            for (k = 0; k < 11; k++) {
              output = pgm_read_word_near(forward + k);
              Serial485_1.print(output);
            }  
            i = "";
//delayMicroseconds (660);
while (!(UCSR0A & (1 << UDRE0)))  // Wait for empty transmit buffer
UCSR0A |= 1 << TXC0;  // mark transmission not complete
while (!(UCSR0A & (1 << TXC0)));   // Wait for the transmission to complete
            digitalWrite(7, LOW);
            digitalWrite(13, LOW);
            break;
          case 0x00:
//            Serial.println("00");
            digitalWrite(12, HIGH);
            digitalWrite(13, HIGH);
            for (k = 0; k < 11; k++) {
              output = pgm_read_word_near(backward + k);
              Serial485_2.print(output);
            } 
            i = "";
//delayMicroseconds (660);
while (!(UCSR0A & (1 << UDRE0)))  // Wait for empty transmit buffer
UCSR0A |= 1 << TXC0;  // mark transmission not complete
while (!(UCSR0A & (1 << TXC0)));   // Wait for the transmission to complete
            digitalWrite(12, LOW);
            digitalWrite(13, LOW);
            break;
          default:
//            Serial.println("def05");
            i = "";
        }}
        break;
      case 0x04:
        digitalWrite(7, HIGH);
        digitalWrite(13, HIGH);
        Serial485_1.println("04");
        i = "";
//delayMicroseconds (660);
while (!(UCSR0A & (1 << UDRE0)))  // Wait for empty transmit buffer
UCSR0A |= 1 << TXC0;  // mark transmission not complete
while (!(UCSR0A & (1 << TXC0)));   // Wait for the transmission to complete
        digitalWrite(7, LOW);
        digitalWrite(13, LOW);
        break;
      default:
//        Serial.println("default");
        i = "";
    }   
    
//  End = 0;
  } 

//----------------------------------------------
  
  Serial485_1.listen(); 
  while (Serial485_1.available()) {
    b = Serial485_1.read();
    i += b;

    switch (i.charAt(0)) {
      case 0x04:
//        digitalWrite(9, HIGH);
        digitalWrite(13, HIGH);
        Serial.println("04");
        i = "";
//delayMicroseconds (660);
//while (!(UCSR0A & (1 << UDRE0)))  // Wait for empty transmit buffer
//UCSR0A |= 1 << TXC0;  // mark transmission not complete
//while (!(UCSR0A & (1 << TXC0)));   // Wait for the transmission to complete
//        digitalWrite(9, LOW);
        digitalWrite(13, LOW);
        break;
      default:
//        Serial.println("default");
        i = "";
    }   
  } 

//----------------------------------------------
  
  Serial485_2.listen(); 
  while (Serial485_2.available()) {
    b = Serial485_2.read();
    i += b;

    switch (i.charAt(0)) {
      case 0x05:
//        digitalWrite(9, HIGH);
        digitalWrite(13, HIGH);
        Serial.println("05");
        i = "";
//delayMicroseconds (660);
//while (!(UCSR0A & (1 << UDRE0)))  // Wait for empty transmit buffer
//UCSR0A |= 1 << TXC0;  // mark transmission not complete
//while (!(UCSR0A & (1 << TXC0)));   // Wait for the transmission to complete
//        digitalWrite(9, LOW);
        digitalWrite(13, LOW);
        break;
      default:
//        Serial.println("default");
        i = "";
    }   
  }
  
}
